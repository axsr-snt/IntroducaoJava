package br.com.fiap.healthTrack;

/**
 * Telefone do Usuário
 */
public class Telefone {
	
	// Atributos da classe

	/**
	 * ddd do telefone
	 */
	private int ddd;
	
	/**
	 * número do telefone
	 */
	private int telefone;

	// Métodos da classe
	
	/**
	 * retorna ddd do telefone
	 * @return ddd do telefone
	 */
	public int getDdd() {
		return ddd;
	}

	/**
	 * determina ddd do telefone
	 * @param ddd DDD do telefone
	 */
	public void setDdd(int ddd) {
		this.ddd = ddd;
	}

	// Métodos da classe
	
	/**
	 * retorna número do telefone
	 * @return número do telefone
	 */
	public int getTelefone() {
		return telefone;
	}

	/**
	 * determina número do telefone
	 * @param telefone Número do telefone
	 */
	public void setTelefone(int telefone) {
		this.telefone = telefone;
	}
	
	// Construtor da classe
	
	/**
	 * cria nova instância de Telefone
	 * @param ddd DDD do Telefone
	 * @param telefone Telefone do Usuário
	 */
	public Telefone(
			int ddd,
			int telefone
		) {
		this.ddd = ddd;
		this.telefone = telefone;
	}
}
