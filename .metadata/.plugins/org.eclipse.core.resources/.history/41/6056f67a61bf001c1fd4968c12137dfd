package br.com.fiap.healthTrack;

/**
 * Informações de Esporte
 */
public class Esporte {
	
	// Atributos da classe

	/**
	 * nome do esporte
	 */
	private String esporte;
	
	/**
	 * quantidade de calorias gastas por Km
	 */
	private float caloriaKm;

	/**
	 * quantidade de carbono poupado por Km
	 */
	private float carbonoKm;

	
	// Métodos da classe
	
	/**
	 * retorna nome do esporte
	 * @return nome do esporte
	 */
	public String getEsporte() {
		return esporte;
	}

	/**
	 * determina nome do esporte
	 * @param esporte Nome do esporte
	 */
	public void setEsporte(String esporte) {
		this.esporte = esporte;
	}

	/**
	 * retorna quantidade de calorias gastas por Km
	 * @return quantidade de calorias por km
	 */
	public float getCaloriaKm() {
		return caloriaKm;
	}

	/**
	 * determina quantidade de calorias gastas por Km
	 * @param caloriaKm Quantidade de calorias por km
	 */
	public void setCaloriaKm(float caloriaKm) {
		this.caloriaKm = caloriaKm;
	}

	/**
	 * retorna quantidade de carbono gastas por Km
	 * @return quantidade de carbono por km
	 */
	public float getCarbonoKm() {
		return carbonoKm;
	}

	/**
	 * determina quantidade de carbono gastas por Km
	 * @param carbonoKm Quantidade de carbono por km
	 */
	public void setCarbonoKm(float carbonoKm) {
		this.carbonoKm = carbonoKm;
	}
	
	// Construtor da classe
	
	/**
	 * cria nova instância de Esporte
	 * @param esporte Nome do esporte
	 * @param caloriaKm Calorias gastas por KM
	 * @param carbonoKm Carbono poupado por KM
	 */
	public Esporte(
			String esporte,
			float caloriaKm,
			float carbonoKm
		) {
		this.esporte = esporte;
		this.caloriaKm = caloriaKm;
		this.carbonoKm = carbonoKm;
	}
}
