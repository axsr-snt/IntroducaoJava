package br.com.fiap.healthTrack;

import java.util.List;

/**
 * Carteira do Usuário
 */
public class Carteira {

	// Atributos da classe

	/**
	 * saldo de carbono
	 */
	private float saldoCarbono;

	/**
	 * lista de transações que a carteira realizou
	 */
	private List<Transacao> transacoes;

	// Métodos da classe
	
	/**
	 * retorna lista de transações que a carteira realizou
	 * @return transacoes
	 */
	public List<Transacao> getTransacoes() {
		return transacoes;
	}
	
	/**
	 * adiciona transação à lista de transações da carteira
	 * @param transacao Transação da carteira
	 */
	public void setTransacao(Transacao transacao) {
		this.transacoes.add(transacao);
	}
	
	/**
	 * retorna saldo de carbono da carteira
	 * @return saldoCarbono
	 */
	public float getSaldoCarbono() {
		return saldoCarbono;
	}
	
	/**
	 * adiciona saldo de carbono da carteira
	 * @param saldo Saldo a ser adicionado
	 */
	public void adicionaSaldoCarbono(float saldo) {
		this.saldoCarbono += saldo;
	}
	
	/**
	 * retira saldo de carbono da carteira
	 * @param saldo Saldo a ser retirado da carteira
	 */
	public void subtraiSaldoCarbono(float saldo) {
		this.saldoCarbono -= saldo;
	}

	
	// Construtor da classe
	
	/**
	 * cria nova instância de Carteira com o saldo zerado
	 */
	public Carteira() {
		this.saldoCarbono = 0.00f;
	}
	
}