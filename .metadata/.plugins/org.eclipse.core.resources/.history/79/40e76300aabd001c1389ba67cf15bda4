package introducao_poo;

public class Cliente {
	private String nome;
	private String cpf;
	private String telefone;
	
	public String getNome() {
		return nome;
	}
	public void setNome(String nome) {
		this.nome = nome;
	}
	public String getCpf() {
		return cpf;
	}
	public String getTelefone() {
		return telefone;
	}
	public void setTelefone(String telefone) {
		this.telefone = telefone;
	}
	
	/*Construtor é utilizado para criar um objeto com as caracteristicas já atribuidas*/
	
	public Cliente(String cpf) {
		this.cpf = cpf; 
		/*"this" referencia o atributo da propria classe o depois do igual referencia o parametro;
		  "this" é usado quando o atributo e o argumento tem o mesmo nome, que no caso colocar o mesmo nome é uma boa pratica;
		*/
	}
	
	/*Quando não se atribui argumentos para uma classe  se cria um construtor o construtor padrão deixa de funcionar */
	
	public Cliente( ) {
		
	}
	
	public Cliente(String nome, String telefone, String cpf) {
		this.nome = nome;
		this.telefone = telefone;
		this.cpf = cpf;
	}
}